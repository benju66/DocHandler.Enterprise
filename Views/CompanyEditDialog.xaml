<Window x:Class="DocHandler.Views.CompanyEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Edit Company" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Company Name -->
        <GroupBox Grid.Row="0" Header="Company Name" Margin="0,0,0,15">
            <TextBox x:Name="CompanyNameBox"
                     Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14"
                     Padding="8,6"/>
        </GroupBox>
        
        <!-- Aliases Header -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Aliases"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
            
            <Button Grid.Column="1"
                    Content="Add Alias"
                    Click="AddAliasButton_Click"
                    Padding="10,5">
                <Button.Resources>
                    <Style TargetType="ui:SymbolIcon">
                        <Setter Property="Width" Value="14"/>
                        <Setter Property="Height" Value="14"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        
        <!-- Aliases List -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="4"
                MaxHeight="200">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="AliasesList" 
                              ItemsSource="{Binding Aliases}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding}"
                                               VerticalAlignment="Center"/>
                                    
                                    <Button Grid.Column="1"
                                            Click="RemoveAliasButton_Click"
                                            Tag="{Binding}"
                                            ToolTip="Remove alias"
                                            Padding="6"
                                            Background="Transparent"
                                            BorderThickness="0">
                                        <ui:SymbolIcon Symbol="Cancel" Width="14" Height="14"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Empty State -->
                <TextBlock Text="No aliases defined"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,20"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Aliases.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </ScrollViewer>
        </Border>
        
        <!-- Help Text -->
        <TextBlock Grid.Row="3" 
                   Text="Aliases help identify the company in documents. For example, 'ABC Construction' might also appear as 'ABC' or 'ABC Const'."
                   TextWrapping="Wrap"
                   FontSize="12"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                   Margin="0,15,0,0"
                   VerticalAlignment="Top"/>
        
        <!-- Buttons -->
        <Grid Grid.Row="4" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1" 
                    Content="OK" 
                    IsDefault="True"
                    Click="OkButton_Click"
                    MinWidth="80"
                    Margin="0,0,10,0"
                    Padding="10,5">
                <Button.IsEnabled>
                    <Binding Path="CompanyName" Converter="{StaticResource StringNotEmptyConverter}"/>
                </Button.IsEnabled>
            </Button>
            
            <Button Grid.Column="2" 
                    Content="Cancel" 
                    IsCancel="True"
                    Click="CancelButton_Click"
                    MinWidth="80"
                    Padding="10,5"/>
        </Grid>
    </Grid>
</Window>